{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "app/*": ["src/app/*"],
      "ui/*": ["src/ui/*"],
      "theme": ["src/theme/*"],
      "hooks/*": ["src/hooks/*"],
      "context/*": ["src/context/*"],
      "layouts/*": ["src/layouts/*"],
      "api/*": ["src/pages/api/*"],
      "providers/*": ["src/providers/*"],
      "types/*": ["src/types/*"]
    },
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "**/**/*.test.ts", "**/**/*.test.tsx"]
}
